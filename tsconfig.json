{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./src/",
        "paths": {
            "@controller/*": ["controller/*"],
            "@utils/*": ["utils/*"]
        },
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "__test__"]
}
