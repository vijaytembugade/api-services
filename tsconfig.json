{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./src/",
        "paths": {
            "@controller/*": ["controller/*"],
            "@utils/*": ["utils/*"],
            "@routes/*": ["routes/*"],
            "@models/*": ["models/*"],
            "@service/*": ["service/*"],
            "@middleware/*": ["middleware/*"]
        },
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "__test__"]
}
