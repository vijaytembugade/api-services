{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./src/",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@utils/*": ["utils/*"],
            "@routes/*": ["routes/*"],
            "@models/*": ["models/*"],
            "@service/*": ["service/*"],
            "@middlewares/*": ["middlewares/*"],
            "@validator/*": ["validator/*"]
        },
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "__test__"]
}
